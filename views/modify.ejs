<!-- MODIFY.ejs (EDIT, NEW POST) functionality PAGE (FRONTEND)-->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Blog Page</title>
  <!-- CSS Stylesheet -->
  <link rel="stylesheet" href="/styles/main.css" />
</head>

<body>
  <div class="container">
    <!-- Heading -->
    <h1>
      <%= heading %>
    </h1>

    <% if (locals.post) { %>
      <!-- EDIT Post Form -->
      <form id="editForm" method="post" action="/api/posts/<%=post.id%>">
        <!-- Title -->
        <input type="text" name="title" value="<%=post.title %>" />
        <!-- Content box -->
        <textarea id="content" rows="9"><%=post.content %></textarea>
        <!-- Author -->
        <input type="text" name="author" value="<%=post.author %>" />
        <!-- Submit Button (POST edited) -->
        <button class="full-width" type="submit">
          <%= submit %>
        </button>
      </form>

    <% } else {%>
      <!-- NEW Post Form -->
        <form id="newPostForm" method="post" action="/api/posts">
          <!-- Title -->
          <input type="text" name="title" placeholder="Title" required />
          <!-- Content box -->
          <textarea name="content" placeholder="Content" required rows="9"></textarea>
          <!-- Author -->
          <input type="text" name="author" placeholder="Author" required />
          <!-- Submit Button (POST created) -->
          <button class="full-width" type="submit">
            <%= submit %>
          </button>
        </form>
        <% } %>
  </div>
</body>
</html>
